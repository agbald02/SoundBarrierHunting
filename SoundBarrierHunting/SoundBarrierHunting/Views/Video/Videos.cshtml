@using SoundBarrierHunting.Models;
@using SoundBarrierHunting.Domain.Entities;
@model IEnumerable<Video>

@{
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Videos</title>
</head>
<body>
    <div class="text-center">
        <img src="~/Content/BoneToSize.jpg" id="SoundAdvicePhoto" />
    </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="allVideos">
                    <div id="SoundAdviceContainer">
                        <div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#1" data-toggle="tab">Featured</a>
                                </li>
                                <li>
                                    <a href="#2" data-toggle="tab">Sound Barrier Info</a>
                                </li>
                                <li>
                                    <a href="#3" data-toggle="tab">Essential Hunting Tips</a>
                                </li>
                                <li>
                                    <a href="#4" data-toggle="tab">Sound Concealment Rules</a>
                                </li>
                                <li>
                                    <a href="#5" data-toggle="tab">Whitetail Hearing Science</a>
                                </li>
                                <li>
                                    <a href="#6" data-toggle="tab">Hunts and Webisodes</a>
                                </li>
                            </ul>

                            <div class="tab-content" id="AllVideosTab">
                                <div class="tab-pane active" id="1">
                                    <div class="col-lg-8">
                                        <div class="text-center" id="RecentContent">Featured Video</div>
                                        <div id="VideoFrame">
                                            <div id="videoWrapper">
                                                <iframe id="video" width="684" height="440"
                                                        src="https://www.youtube.com/embed/UjC8Lmx33KI"
                                                        frameborder="0" allowfullscreen></iframe>
                                            </div>
                                        </div>

                                        <div class="text-left" id="SoundAdviceBackButton">
                                            <a href="@Url.Action("SoundAdvice", "Home")">Back to Sound Advice</a>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="text-center" id="RecentContent">Title (But Bigger)</div>
                                        <p id="VideoDescription">Description would go somewhere like this</p>
                                        @*<div class="text-center" id="AllVideosButton">
                                            <a href="@Url.Action("AllVideos","Video")" class="btn btn-success btn-lg" id="VideosMenuButton">All Videos</a>
                                        </div>
                                        
                                        <a href="#2" data-toggle="tab" class="btn btn-success btn-lg" id="VideosMenuButton">Sound Barrier Info</a>*@
                                    </div>
                                </div>

                                <div class="tab-pane" id="2">
                                    @foreach (var v in Model)
                                    {
                                        if (v.Category == "Sound Barrier Info")
                                        {
                                            <div class="row" id="AllVideosRow">
                                                <div class="col-lg-4">
                                                    <iframe id="video" width="392" height="220"
                                                            src="@v.Link"
                                                            frameborder="0" allowfullscreen></iframe>
                                                </div>
                                                <div class="col-lg-8">
                                                    <h1 class="text-left" id="VideoTitle">
                                                        @v.Title
                                                    </h1>
                                                    <p class="text-left" id="VideoDescription">
                                                        @v.Description
                                                    </p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>

