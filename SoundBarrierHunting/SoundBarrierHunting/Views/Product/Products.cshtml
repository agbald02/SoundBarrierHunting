@model SoundBarrierHunting.Models.ProductListViewModel

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Products</title>
</head>
<body>

    <div id="ProductContainer">
        <div class="row">
            <div class="col-lg-12">
                <div id="allVideos">
                    <div class="container" id="SoundAdviceContainer">
                        @foreach( var p in Model.Products)
                        {
                            @Html.Partial("_productSummary", p);
                        }


                        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                            <input type="hidden" name="cmd" value="_s-xclick">
                            <input type="hidden" name="hosted_button_id" value="DWGCPPUD7CZ7N">
                            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                        </form>
                        
                     </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>