@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sound Advice</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon.ico")" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/HomePageCSS.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/NavCSS.css" />
</head>
<body>
@Html.Partial("_NavTop")
@Html.Partial("_ButtonBand")
@Html.Partial("_NavBarBottom")

    <div class="text-center">
        <img src="~/Content/DeerSkullsAndAntlers.jpg" id="SoundAdvicePhoto" />
    </div>

    <div class="col-md-12" id="SoundAdviceContainer">
        <div class="row">
            <div class="text-left">
                <h2 id="SoundAdviceHeaderArticle">Articles</h2>
                <br />
                <div id="SoundAdviceArticleParagraph">
                    Several of our preliminary articles are currently being reviewed for
                    publishing. Once they are publicly available, we will make them available
                    to you as well. Stay tuned!
                </div>
            </div>
        </div>


        <div class="row">
            <div class="text-left">
                <h2 id="SoundAdviceHeaderVideo">Videos</h2>
            </div>
        </div>

        <div class="text-left" id="videoPadding">
            <iframe id="video" width="560" height="315"
                    src="https://www.youtube.com/embed/66ImvhrhuHc"
                    frameborder="0" allowfullscreen></iframe>
            <iframe id="video" width="560" height="315"
                    src="https://www.youtube.com/embed/PIzrBx-aIpg"
                    frameborder="0" allowfullscreen></iframe>
            <br />
            <iframe id="video" width="560" height="315"
                    src="https://www.youtube.com/embed/krj1O3tHbDg"
                    frameborder="0" allowfullscreen></iframe>
            <iframe id="video" width="560" height="315"
                    src="https://www.youtube.com/embed/4gK8jmXqtdk"
                    frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="row">
            <div class="col-md-9" id="SoundAdviceVideoSentence">
                <div class="text-center">
                    Stay tuned for more videos!
                </div>
            </div>
        </div>
    </div>
</body>
</html>